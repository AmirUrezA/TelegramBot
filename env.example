# Environment Variables for Enterprise Telegram Bot
# Copy this file to .env and fill in your values

# ==============================
# REQUIRED SETTINGS
# ==============================

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# SMS Service API Key (Kavenegar)
KAVENEGAR_API_KEY=your_kavenegar_api_key_here

# Database Connection URL
# For local development (outside Docker):
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/telegram_bot
# For Docker deployment (uncomment and use this instead):
# DATABASE_URL=postgresql+asyncpg://username:password@db:5432/telegram_bot

# ==============================
# OPTIONAL SETTINGS
# ==============================

# Telegram API Credentials (for admin notifications)
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash

# Admin Username (without @)
ADMIN_USERNAME=Arshya_Alaee

# Payment Information
PAYMENT_CARD_NUMBER=6063731181415549
PAYMENT_CARD_HOLDER=محمد مهدی مقدم اصل

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/bot.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Database Configuration
DB_ECHO=false
DB_POOL_SIZE=10
DB_POOL_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Security Settings
MAX_OTP_ATTEMPTS=3
OTP_EXPIRY_MINUTES=10
RATE_LIMIT_PER_MINUTE=60
ALLOWED_CITIES=تهران

# SMS Configuration
SMS_VERIFY_TEMPLATE=verify

# Webhook Configuration (for production)
WEBHOOK_URL=
WEBHOOK_PORT=8443

# ==============================
# DOCKER CONFIGURATION
# ==============================

# Database Configuration for Docker
POSTGRES_DB=telegram_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=amir
POSTGRES_PORT=5432

# PgAdmin Configuration
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Configuration (optional)
REDIS_PORT=6379

# Monitoring Configuration (optional)
PROMETHEUS_PORT=9090
